-- ---------- BOT√ÉO DESLIZANTE ON/OFF ----------
local switchFrame = Instance.new("Frame", painel)
switchFrame.Size = UDim2.fromOffset(60,30)
switchFrame.Position = UDim2.fromScale(0.05,0.3)
switchFrame.BackgroundColor3 = Color3.fromRGB(130,130,130)
Instance.new("UICorner", switchFrame).CornerRadius = UDim.new(1,0)

local knob = Instance.new("Frame", switchFrame)
knob.Size = UDim2.fromOffset(26,26)
knob.Position = UDim2.fromOffset(2,2)
knob.BackgroundColor3 = Color3.fromRGB(240,240,240)
Instance.new("UICorner", knob).CornerRadius = UDim.new(1,0)

local stateLabel = Instance.new("TextLabel", painel)
stateLabel.Size = UDim2.fromOffset(50,30)
stateLabel.Position = UDim2.fromScale(0.25,0.3)
stateLabel.BackgroundTransparency = 1
stateLabel.Font = Enum.Font.SourceSansBold
stateLabel.TextSize = 16
stateLabel.Text = "OFF"
stateLabel.TextColor3 = Color3.fromRGB(0,255,0)

-- Fun√ß√£o atualizar switch
local function updateSwitch()
	if velEnabled then
		switchFrame.BackgroundColor3 = Color3.fromRGB(0,200,0)
		knob.Position = UDim2.fromOffset(2,2)
		stateLabel.Text = "ON"
		stateLabel.TextColor3 = Color3.fromRGB(0,255,0)
	else
		switchFrame.BackgroundColor3 = Color3.fromRGB(200,0,0)
		knob.Position = UDim2.fromOffset(32,2)
		stateLabel.Text = "OFF"
		stateLabel.TextColor3 = Color3.fromRGB(0,255,0)
	end
end

-- Conex√£o clique do bot√£o deslizante
switchFrame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		velEnabled = not velEnabled
		chronoEnabled = velEnabled
		updateSwitch()
	end
end)

